{
    "name": "api-skeletons/laravel-hal-doctrine",
    "description": "Doctrine Metadata based HAL",
    "type": "library",
    "require": {
        "php": "^8.0",
        "laravel-doctrine/orm": "^1.7",
        "api-skeletons/laravel-hal": "^5.0",
        "doctrine/doctrine-laminas-hydrator": "^2.2"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "doctrine/dbal": "^2.13.7||^3.1.1",
        "doctrine/annotations": "^1.13.2",
        "orchestra/testbench": "^6.23",
        "phpunit/phpunit": "^9.5"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "ApiSkeletons\\Laravel\\HAL\\Doctrine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApiSkeletonsTest\\Laravel\\HAL\\Doctrine\\": "test/"
        }
    },
    "authors": [
        {
            "name": "Tom H Anderson",
            "email": "tom.h.anderson@gmail.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "ApiSkeletons\\Laravel\\HAL\\Doctrine\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpcs && vendor/bin/phpunit && vendor/bin/psalm"
    }
}
